@using DAL
@model Account
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link href="../Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div>
        <p>Name: @Model.Name</p>
        <p>Age: @Model.Age</p>
        <p>Gender: @Model.Gender</p>
        <p>Email: @Model.Email</p>
        <p>Telephone: @Model.Telephone</p>
        <p>Note via: @Model.Notification</p>
        <p>Password: @Model.Password</p>
        
        <form role="form" action="/Home/HomePage">
            <button type="submit" class="btn btn-default">To home page</button>
        </form>
    </div>
</body>
</html>
